{
    "git.ignoreLegacyWarning": true,
    // editor
    "editor.fontSize": 15,
    // "editor.fontFamily": "Monaco",
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontWeight": "400",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "html.format.enable": false,
    "terminal.integrated.fontSize": 15,
    // files
    "files.autoSave": "off",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.vscode": true,
        "**/__pycache__": true,
        "**/.venv": true
    },
    // python
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": false,
    "python.linting.pylintPath": "C:/ProgramData/Miniconda3/Scripts/pylint",
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pycodestylePath": "C:/ProgramData/Miniconda3/Scripts/pep8",
    "python.linting.pycodestyleArgs": [
        "--max-line-length=120"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "C:/ProgramData/Miniconda3/Scripts/flake8",
    "python.linting.flake8Args": [
        "--max-line-length=120"
    ],
    "python.formatting.provider": "black",
    "python.formatting.yapfPath": "C:/ProgramData/Miniconda3/Scripts/yapf",
    "python.formatting.yapfArgs": [
        "--parallel",
        "--style={based_on_style:pep8, column_limit:120, indent_width:4, split_before_logical_operator:false, spaces_before_comment:4}"
    ],
    "python.formatting.blackPath": "C:/ProgramData/Miniconda3/Scripts/black",
    "python.formatting.blackArgs": [
        "--line-length=120",
        "--safe"
    ],
    "explorer.confirmDragAndDrop": false,
    "window.zoomLevel": 0,
    "editor.renderWhitespace": "all",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Dracula",
    "workbench.activityBar.visible": true,
    "workbench.sideBar.location": "left",
    "go.formatTool": "goimports",
    "go.useLanguageServer": true
}
